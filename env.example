# Database Configuration
# Supabase (PostgreSQL)
SUPABASE_URL=your_supabase_project_url_here
SUPABASE_API_KEY=your_supabase_anon_key_here

# Pinecone (Vector Database)
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1

# Model Configuration
# Colab Model Endpoints (via localtunnel)
MISTRAL_MODEL_URL=https://your-mistral-subdomain.loca.lt
EMBEDDING_MODEL_URL=https://your-embedding-subdomain.loca.lt

# Model API Headers (for localtunnel)
MODEL_API_HEADERS={"bypass-tunnel-reminder": "true", "Content-Type": "application/json"}

# Application Configuration
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# Data Processing Configuration
MAX_RETRY_ATTEMPTS=3
REQUEST_TIMEOUT=30
BATCH_SIZE=100
CHUNK_SIZE=500
CHUNK_OVERLAP=50

# File Storage
DOWNLOAD_DIR=./downloads
TEMP_DIR=./temp
CACHE_DIR=./cache

# Rate Limiting
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_DELAY_SECONDS=1

# Security
ENCRYPTION_KEY=your_encryption_key_here
JWT_SECRET=your_jwt_secret_here

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8000

# Testing
TEST_DATABASE_URL=your_test_database_url_here
TEST_PINECONE_INDEX=test-index 